@model Cliente
@{
    ViewData["Title"] = "CadastroCliente";
}

<form asp-action="CadastroCliente" asp-controller="Home" method="post">
<main role="main">

    <section class="container" style="margin-top: 50px">
        <div class="row">
            <aside class="col-sm-6">
                <h3 class="subtitle-doc">
                   Cadastro Cliente 
                </h3>
                <div id="code_register_1">
                    <div class="card">
                        <header class="card-header">
                            <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-primary mt-1">Entrar</a>
                            <h4 class="card-title mt-2">Sign up</h4>
                        </header>
                        <article class="card-body">
                      
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>Nome</label>
                                        <input type="text" asp-for="Nome" class="form-control" placeholder="">
                                    </div> 

                                    <div class="col form-group">
                                        <label>Nascimento</label>
                                        <input type="text" class="form-control" asp-for="Nascimento" placeholder="">
                                    </div> 
                                </div>


                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option1">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option2">
                                        <span class="form-check-label"> Feminino</span>
                                    </label>
                                </div> 


                                <div class="form-group">
                                    <label>CPF</label>
                                    <input type="text" class="form-control" asp-for="CPF" placeholder="">
                                    <small class="form-text text-muted">
                                        We'll never share your email with anyone
                                        else.
                                    </small>
                                </div> 


                                <div class="form-group">
                                    <label>Telefone</label>
                                    <input type="number" class="form-control" asp-for="Telefone" placeholder="">
                                </div> 


                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="email" class="form-control" asp-for="Email" placeholder="">    
                                </div> 


                                <div class="form-group">
                                    <label>Senha</label>
                                    <input class="form-control" asp-for="Senha" type="password">
                                </div> 

                                <div class="form-group">
                                    <button type="submit" asp-for="Senha" class="btn btn-primary btn-block"> Register </button>
                                </div> 

                   
                        </article> 
                        <div class="border-top card-body text-center">Já tem uma conta? <a asp-action="Login" asp-controller="Home" href="">Entre</a></div>
                    </div> 

                </div> 
            </aside>
        </div>
    </section>
</main>
</form>

